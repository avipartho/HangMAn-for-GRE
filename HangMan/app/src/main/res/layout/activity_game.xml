<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbarStyle="insideOverlay"
    android:fillViewport="true"
    android:layout_marginBottom="10dp"
    android:fadeScrollbars="false"
    tools:context="com.example.user.hangman.GameActivity">

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <TextView
           android:id="@+id/textView2"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginTop="50dp"
           android:layout_centerHorizontal="true"
           android:layout_marginStart="10dp"
           android:layout_marginEnd="10dp"
           android:layout_marginBottom="20dp"
           android:textSize="20sp"
           android:textColor="#000000"
           android:text="TextView" />

       <TextView
           android:id="@+id/textView"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@+id/textView2"
           android:layout_marginStart="10dp"
           android:layout_marginEnd="10dp"
           android:layout_centerHorizontal="true"
           android:text="TextView"
           android:gravity="center_horizontal"
           android:textSize="20sp"
           android:textColor="#000000"
           android:layout_marginBottom="10dp"/>

       <TextView
           android:id="@+id/live"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginTop="13dp"
           android:text="TextView"
           android:textColor="#000000"
           android:layout_alignParentTop="true"
           android:layout_alignParentEnd="true"
           android:layout_marginEnd="15dp" />

       <TextView
           android:id="@+id/scoreboard"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginTop="13dp"
           android:text="TextView"
           android:textColor="#000000"
           android:layout_alignParentTop="true"
           android:layout_alignParentStart="true"
           android:layout_marginStart="15dp" />

       <LinearLayout
           android:id="@+id/ll1"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:layout_below="@+id/textView"
           android:layout_marginTop="20dp">

           <Button
               android:id="@+id/a"
               android:layout_width="0dp"
               android:layout_height="40dp"
               android:layout_marginStart="10dp"
               android:layout_marginTop="10dp"
               android:layout_weight=".16"
               android:onClick="onclick"
               android:text="A" />
           <Button
               android:id="@+id/b"
               android:layout_width="0dp"
               android:layout_height="40dp"
               android:layout_marginTop="10dp"
               android:text="B"
               android:layout_weight=".16"
               android:onClick="onclick"/>
           <Button
               android:id="@+id/c"
               android:layout_width="0dp"
               android:layout_height="40dp"
               android:layout_marginTop="10dp"
               android:text="C"
               android:layout_weight=".16"
               android:onClick="onclick"/>
           <Button
               android:id="@+id/d"
               android:layout_width="0dp"
               android:layout_height="40dp"
               android:layout_marginTop="10dp"
               android:text="D"
               android:layout_weight=".16"
               android:onClick="onclick"/>
           <Button
               android:id="@+id/e"
               android:layout_width="0dp"
               android:layout_height="40dp"
               android:layout_marginTop="10dp"
               android:text="E"
               android:layout_weight=".16"
               android:onClick="onclick"/>
           <Button
               android:id="@+id/f"
               android:layout_width="0dp"
               android:layout_height="40dp"
               android:layout_marginTop="10dp"
               android:layout_marginEnd="10dp"
               android:text="F"
               android:layout_weight=".16"
               android:onClick="onclick"/>

       </LinearLayout>

       <LinearLayout
           android:id="@+id/ll2"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:layout_below="@+id/ll1"
           android:layout_marginTop="5dp">

           <Button
               android:id="@+id/g"
               android:layout_width="0dp"
               android:layout_height="40dp"
               android:layout_marginStart="10dp"
               android:layout_marginTop="10dp"
               android:text="G"
               android:layout_weight=".16"
               android:onClick="onclick"/>
           <Button
               android:id="@+id/h"
               android:layout_width="0dp"
               android:layout_height="40dp"
               android:layout_marginTop="10dp"
               android:text="H"
               android:layout_weight=".16"
               android:onClick="onclick"/>
           <Button
               android:id="@+id/i"
               android:layout_width="0dp"
               android:layout_height="40dp"
               android:layout_marginTop="10dp"
               android:text="I"
               android:layout_weight=".16"
               android:onClick="onclick"/>
           <Button
               android:id="@+id/j"
               android:layout_width="0dp"
               android:layout_height="40dp"
               android:layout_marginTop="10dp"
               android:text="J"
               android:layout_weight=".16"
               android:onClick="onclick"/>
           <Button
               android:id="@+id/k"
               android:layout_width="0dp"
               android:layout_height="40dp"
               android:layout_marginTop="10dp"
               android:text="K"
               android:layout_weight=".16"
               android:onClick="onclick"/>
           <Button
               android:id="@+id/l"
               android:layout_width="0dp"
               android:layout_height="40dp"
               android:layout_marginTop="10dp"
               android:layout_marginEnd="10dp"
               android:text="L"
               android:layout_weight=".16"
               android:onClick="onclick"/>

       </LinearLayout>

       <LinearLayout
           android:id="@+id/ll3"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:layout_below="@+id/ll2"
           android:layout_marginTop="5dp">

           <Button
               android:id="@+id/m"
               android:layout_width="0dp"
               android:layout_height="40dp"
               android:layout_marginStart="10dp"
               android:layout_marginTop="10dp"
               android:text="M"
               android:layout_weight=".16"
               android:onClick="onclick"/>
           <Button
               android:id="@+id/n"
               android:layout_width="0dp"
               android:layout_height="40dp"
               android:layout_marginTop="10dp"
               android:text="N"
               android:layout_weight=".16"
               android:onClick="onclick"/>
           <Button
               android:id="@+id/o"
               android:layout_width="0dp"
               android:layout_height="40dp"
               android:layout_marginTop="10dp"
               android:text="O"
               android:layout_weight=".16"
               android:onClick="onclick"/>
           <Button
               android:id="@+id/p"
               android:layout_width="0dp"
               android:layout_height="40dp"
               android:layout_marginTop="10dp"
               android:text="P"
               android:layout_weight=".16"
               android:onClick="onclick"/>
           <Button
               android:id="@+id/q"
               android:layout_width="0dp"
               android:layout_height="40dp"
               android:layout_marginTop="10dp"
               android:text="Q"
               android:layout_weight=".16"
               android:onClick="onclick"/>
           <Button
               android:id="@+id/r"
               android:layout_width="0dp"
               android:layout_height="40dp"
               android:layout_marginTop="10dp"
               android:layout_marginEnd="10dp"
               android:text="R"
               android:layout_weight=".16"
               android:onClick="onclick"/>

       </LinearLayout>

       <LinearLayout
           android:id="@+id/ll4"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:layout_below="@+id/ll3"
           android:layout_marginTop="5dp">

           <Button
               android:id="@+id/s"
               android:layout_width="0dp"
               android:layout_height="40dp"
               android:layout_marginStart="10dp"
               android:layout_marginTop="10dp"
               android:text="S"
               android:layout_weight=".16"
               android:onClick="onclick"/>
           <Button
               android:id="@+id/t"
               android:layout_width="0dp"
               android:layout_height="40dp"
               android:layout_marginTop="10dp"
               android:text="T"
               android:layout_weight=".16"
               android:onClick="onclick"/>
           <Button
               android:id="@+id/u"
               android:layout_width="0dp"
               android:layout_height="40dp"
               android:layout_marginTop="10dp"
               android:text="u"
               android:layout_weight=".16"
               android:onClick="onclick"/>
           <Button
               android:id="@+id/v"
               android:layout_width="0dp"
               android:layout_height="40dp"
               android:layout_marginTop="10dp"
               android:text="V"
               android:layout_weight=".16"
               android:onClick="onclick"/>
           <Button
               android:id="@+id/w"
               android:layout_width="0dp"
               android:layout_height="40dp"
               android:layout_marginTop="10dp"
               android:text="W"
               android:layout_weight=".16"
               android:onClick="onclick"/>
           <Button
               android:id="@+id/x"
               android:layout_width="0dp"
               android:layout_height="40dp"
               android:layout_marginTop="10dp"
               android:layout_marginEnd="10dp"
               android:text="X"
               android:layout_weight=".16"
               android:onClick="onclick"/>

       </LinearLayout>

       <LinearLayout
           android:id="@+id/ll5"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:layout_below="@+id/ll4"
           android:layout_marginTop="5dp">

           <Button
               android:id="@+id/lol"
               android:layout_width="0dp"
               android:layout_height="40dp"
               android:layout_marginStart="10dp"
               android:layout_marginTop="10dp"
               android:text="S"
               android:layout_weight=".16"
               android:onClick="onclick"
               android:visibility="invisible"
               android:clickable="false"/>
           <Button
               android:id="@+id/lol1"
               android:layout_width="0dp"
               android:layout_height="40dp"
               android:layout_marginTop="10dp"
               android:text="T"
               android:layout_weight=".16"
               android:onClick="onclick"
               android:visibility="invisible"
               android:clickable="false"/>
           <Button
               android:id="@+id/y"
               android:layout_width="0dp"
               android:layout_height="40dp"
               android:layout_marginTop="10dp"
               android:text="Y"
               android:layout_weight=".16"
               android:onClick="onclick"/>
           <Button
               android:id="@+id/z"
               android:layout_width="0dp"
               android:layout_height="40dp"
               android:layout_marginTop="10dp"
               android:text="Z"
               android:layout_weight=".16"
               android:onClick="onclick"/>
           <Button
               android:id="@+id/lol3"
               android:layout_width="0dp"
               android:layout_height="40dp"
               android:layout_marginTop="10dp"
               android:text="W"
               android:layout_weight=".16"
               android:onClick="onclick"
               android:visibility="invisible"
               android:clickable="false"/>
           <Button
               android:id="@+id/lol4"
               android:layout_width="0dp"
               android:layout_height="40dp"
               android:layout_marginTop="10dp"
               android:layout_marginEnd="10dp"
               android:text="X"
               android:layout_weight=".16"
               android:onClick="onclick"
               android:visibility="invisible"
               android:clickable="false"/>

       </LinearLayout>

       <Button
           android:id="@+id/next"
           android:layout_width="30dp"
           android:layout_height="30dp"
           android:layout_alignEnd="@+id/live"
           android:layout_below="@+id/ll5"
           android:layout_marginEnd="12dp"
           android:layout_marginTop="26dp"
           android:background="@drawable/forward"
           android:visibility="gone"
           android:onClick="onClickRestart"/>

       <Button
           android:id="@+id/life_icon"
           android:layout_width="20dp"
           android:layout_height="20dp"
           android:layout_alignTop="@+id/live"
           android:layout_marginEnd="5dp"
           android:layout_toStartOf="@+id/live"
           android:background="@drawable/lives"
           android:clickable="false"/>

   </RelativeLayout>

</ScrollView>
